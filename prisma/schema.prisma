// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = "mysql://root:@localhost:3306/elitebethub"
}

model User {
    id        String   @id @default(cuid())
    lastName  String
    firstName String
    role      Role     @default(USER_CUSTOMER)
    pseudo    String?
    email     String   @unique
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")

    @@map(name: "users")
}

enum Role {
    USER_CUSTOMER
    ADMIN_CUSTOMER
}
